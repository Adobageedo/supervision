# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# IMPORTANT: Copy this file to .env and update all values
# NEVER commit .env file to version control!

# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_DB=supervision_maintenance
POSTGRES_USER=supervision_user
POSTGRES_PASSWORD=supervision_password

# ============================================
# Backend Configuration
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=supervision_maintenance
DB_USER=supervision_user
DB_PASSWORD=supervision_password
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production-min-32-chars
BACKEND_PORT=4202


# CORS Configuration
# For production, set to your domain(s), comma-separated
# Example: https://chardouin.fr,https://www.chardouin.fr
CORS_ORIGIN=https://chardouin.fr,https://www.chardouin.fr

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=4200

# ============================================
# Domain & SSL Configuration
# ============================================
DOMAIN=chardouin.fr
EMAIL=your-email@example.com

# ============================================
# Optional: Monitoring & Logging
# ============================================
# LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn-if-using
