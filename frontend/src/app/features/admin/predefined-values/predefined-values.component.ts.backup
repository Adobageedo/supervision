      <mat-toolbar>
        <button mat-icon-button (click)="router.navigate(['/dashboard'])">
          <mat-icon>arrow_back</mat-icon>
        </button>
        <span>Gestion des Valeurs Prédéfinies</span>
      </mat-toolbar>

      <div class="admin-content">
        <mat-tab-group>
          <mat-tab label="Centrales">
            <div class="tab-content">
              <button mat-raised-button color="primary" class="add-button">
                <mat-icon>add</mat-icon>
                Ajouter
              </button>
              
              @if (values[predefinedType.CENTRALE]) {
                <mat-list>
                  @for (value of values[predefinedType.CENTRALE]; track value.id) {
                    <mat-list-item>
                      <span matListItemTitle>{{ value.value }}</span>
                      @if (value.description) {
                        <span matListItemLine>{{ value.description }}</span>
                      }
                      <button mat-icon-button matListItemMeta>
                        <mat-icon>edit</mat-icon>
                      </button>
                    </mat-list-item>
                    <mat-divider></mat-divider>
                  }
                </mat-list>
              }
            </div>
          </mat-tab>

          <mat-tab label="Équipements">
            <div class="tab-content">
              <button mat-raised-button color="primary" class="add-button">
                <mat-icon>add</mat-icon>
                Ajouter
              </button>
              
              @if (values[predefinedType.EQUIPEMENT]) {
                <mat-list>
                  @for (value of values[predefinedType.EQUIPEMENT]; track value.id) {
                    <mat-list-item>
                      <span matListItemTitle>{{ value.value }}</span>
                      @if (value.description) {
                        <span matListItemLine>{{ value.description }}</span>
                      }
                      <button mat-icon-button matListItemMeta>
                        <mat-icon>edit</mat-icon>
                      </button>
                    </mat-list-item>
                    <mat-divider></mat-divider>
                  }
                </mat-list>
              }
            </div>
          </mat-tab>

          <mat-tab label="Types d'événements">
            <div class="tab-content">
              <button mat-raised-button color="primary" class="add-button">
                <mat-icon>add</mat-icon>
                Ajouter
              </button>
              
              @if (values[predefinedType.TYPE_EVENEMENT]) {
                <mat-list>
                  @for (value of values[predefinedType.TYPE_EVENEMENT]; track value.id) {
                    <mat-list-item>
                      <span matListItemTitle>{{ value.value }}</span>
                      @if (value.description) {
                        <span matListItemLine>{{ value.description }}</span>
                      }
                      <button mat-icon-button matListItemMeta>
                        <mat-icon>edit</mat-icon>
                      </button>
                    </mat-list-item>
                    <mat-divider></mat-divider>
                  }
                </mat-list>
              }
            </div>
          </mat-tab>

          <mat-tab label="Types de dysfonctionnements">
            <div class="tab-content">
              <button mat-raised-button color="primary" class="add-button">
                <mat-icon>add</mat-icon>
                Ajouter
              </button>
              
              @if (values[predefinedType.TYPE_DYSFONCTIONNEMENT]) {
                <mat-list>
                  @for (value of values[predefinedType.TYPE_DYSFONCTIONNEMENT]; track value.id) {
                    <mat-list-item>
                      <span matListItemTitle>{{ value.value }}</span>
