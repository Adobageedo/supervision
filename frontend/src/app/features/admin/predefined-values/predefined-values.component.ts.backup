  `,
  styles: [`
    .admin-container {
      height: 100vh;
      display: flex;
      flex-direction: column;
      background-color: #f5f5f5;
    }

    .admin-content {
      flex: 1;
      padding: 24px;
      overflow-y: auto;
    }

